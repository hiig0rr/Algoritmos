#include <stdio.h>

int main() {
    int escolha;
    printf("===== CARDÁPIO =====\n");
    printf("1. arroz\n");
    printf("2. batata Frita\n");
    printf("3. strogonoff\n");
    printf("4. salada\n");
    printf("5. feijao tropeiro\n");
    printf("====================\n");

    printf("Escolha uma opção (1-5): ");
    scanf("%d", &escolha);

    switch(escolha) {
        case 1:
            printf("Você escolheu arroz.\n");
            break;
        case 2:
            printf("Você escolheu batata frita.\n");
            break;
        case 3:
            printf("Você escolheu strogonoff.\n");
            break;
        case 4:
            printf("Você escolheu salada.\n");
            break;
        case 5:
            printf("Você escolheu feijao tropeiro.\n");
            break;
        default:
            printf("Opção inválida! Por favor, escolha entre 1 e 5.\n");
    }

    return 0;
}